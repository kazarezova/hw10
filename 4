import pandas as pd
from scipy.stats import t
import seaborn as sns
import numpy as np
import matplotlib.pyplot as plt

rv = t(1)
df = pd.DataFrame({'x': np.linspace(-8, 8, 1000)})
df["PDF"] = rv.pdf(df['x'])
sns.lineplot(data=df, x="x", y="PDF")

n = int(input('введите n (2, 5, 14, 100): '))
l = []
for i in range(10000):
    sample = rv.rvs(size=n)
    s = np.mean(sample)
    l.append(s)
sns.histplot(x=l, stat="density")
plt.xlim(-8, 8)

